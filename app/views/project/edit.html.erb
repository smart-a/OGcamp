<div class="main">

    <!-- Sign up form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                
                <div class="signup-form" style="width: 100%;">
                    <h2 class="form-title">Edit Project</h2>
                    <%= form_for @project, :url => {action:'update', :id => @project}, class: 'register-form' do |f| %>
                        <div class="form-group">
                            <%= f.text_field "title", :placeholder=>"Project Title", :class=>"form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.text_area "description", :class=>"form-control", :rows=>"3", :placeholder=>"Project Description"  %>
                        </div>
                        <div class="form-group">
                            <div class="row p-3" style="font-size:1rem">
                                <div class="col-5 ">
                                <%= f.radio_button "completion", '0' %>
                                    <label for="project_completion_0">In Progress</label>
                                </div>
                                <div class="col-5">
                                    <%= f.radio_button "completion", '1' %>
                                    <label for="project_completion_1">Completed</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-button">
                            <%= submit_tag "Update", :class=>"form-submit bg-success" %>
                        </div>
                        <div class="form-group form-button">
                            <%= link_to "Back to list", controller: 'user', action: 'dashboard' %>
                        </div>
                    <% end -%>
                </div>
            </div>
        </div>
    </section>
</div>
