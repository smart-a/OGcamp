
    <div class="main">

    <!-- Sign up form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                
                <div class="signup-form" style="width: 100%;">
                    <h2 class="form-title">View Project</h2>
                        <div class="form-group">
                            <h3>Title: </h3>
                            <h5><%= simple_format(@project.title) %></h5>
                        </div>
                        <div class="form-group">
                            <h3>Description: </h3>
                            <h5><%= simple_format(@project.description) %></h5>
                        </div>
                        <div class="form-group">
                            <h3>Status: </h3>
                            <% 
                                status = (@project.completion==0)?'In Progress':'Completed' 
                                bg = (@project.completion==0)?'bg-primary':'bg-success'
                            %>
                            <div class="status <%= bg %>"><%= status %></div>
                        </div>
                        <br/>                 
                        <div class="form-group form-button">
                            <%= link_to "Back to list", controller: 'user', action: 'dashboard'%>
                        </div>
                    
                </div>
            </div>
        </div>
    </section>
</div>
